            <groupId>net.anotheria</groupId>
            <artifactId>moskito-webui</artifactId>
            <version>${moskito-version}</version>
        </dependency>
        <!-- Anotheria dependencies: END -->
    </dependencies>

    <profiles>
        <profile>
            <id>default</id>

            <activation>
                <activeByDefault>true</activeByDefault>
            </activation>

            <modules>
                <module>web</module>
            </modules>
        </profile>

        <profile>
            <id>forrelease</id>

            <modules>
                <module>gen</module>
                <module>web</module>
            </modules>
        </profile>
    </profiles>

    <distributionManagement>
        <repository>
            <id>ano-commercial-release</id>
            <name>Anotheria release Repository</name>
            <url>http://repository.anotheria.net/content/repositories/releases</url>
        </repository>
        <snapshotRepository>
            <id>ano-commercial-snapshot</id>
            <name>Anotheria snapshot Repository</name>
            <url>http://repository.anotheria.net/content/repositories/snapshots</url>
            <uniqueVersion>true</uniqueVersion>
        </snapshotRepository>
    </distributionManagement>

    <scm>
        <url>https://github.com/anotheria/moskito.org</url>
        <connection>scm:git:git@github.com:anotheria/moskito.org.git</connection>
        <developerConnection>scm:git:git@github.com:anotheria/moskito.org.git</developerConnection>
    </scm>
</project>