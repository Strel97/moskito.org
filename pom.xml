    <properties>
        <portalkit-version>0.8.2-SNAPSHOT</portalkit-version>

        <distributeme-version>2.2.1</distributeme-version>

        <moskito-version>2.6.0</moskito-version>

        <ano-db-version>2.1.0</ano-db-version>
        <ano-util-version>2.1.3-SNAPSHOT</ano-util-version>
        <ano-configureme-version>2.2.0</ano-configureme-version>

        <ano-plass-version>2.1.1</ano-plass-version>
        <ano-prise-version>2.1.0</ano-prise-version>

        <ano-doc-version>2.6.2</ano-doc-version>
        <ano-doc-plugin-version>2.6.2</ano-doc-plugin-version>
        <ano-site-version>2.6.2</ano-site-version>
        <ano-photoserver-version>1.2.10-SNAPSHOT</ano-photoserver-version>

